<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleClassSchedule.Views.ItemDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="标题:" FontSize="Large" FontAttributes="Bold"/>
        <Label Text="{Binding Item.ItemTitle}" FontSize="Small"/>
        <Label Text="提醒时间:" FontSize="Large" FontAttributes="Bold"/>
        <Label Text="{Binding Item.AimTime}" FontSize="Small"/>
        <Label Text="描述:" FontSize="Large" FontAttributes="Bold"/>
        <Label Text="{Binding Item.Description}" FontSize="Small"/>
    </StackLayout>
</ContentPage>